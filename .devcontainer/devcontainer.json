{
    "name": "Go Dev Container",
    "dockerFile": "dockerfile",
    "context": ".",
    "customizations": {
        "vscode": {
            "settings": {
                "go.gopath": "/go",
                "go.useLanguageServer": true,
                "extensions": [
                    "golang.go"
                ]
            }
        }
    },
    "postCreateCommand": "go mod tidy",
    "remoteUser": "vscode"
}